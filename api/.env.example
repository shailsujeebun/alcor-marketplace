# ──────────────────────────────────────────────────────
# API — Environment Variables
# Copy to .env and fill in production values
# ──────────────────────────────────────────────────────

# ─── Core ─────────────────────────────────────────────
NODE_ENV=production
PORT=3000
FRONTEND_URL=https://your-domain.com

# ─── Database (PostgreSQL) ────────────────────────────
DATABASE_URL=postgresql://user:password@host:5432/dbname?sslmode=require

# ─── Redis ────────────────────────────────────────────
REDIS_URL=rediss://default:password@host:6379

# ─── Authentication (JWT) ─────────────────────────────
# Must be ≥ 32 characters, high-entropy random string
JWT_SECRET=CHANGE_ME_generate_with_openssl_rand_base64_48
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d

# ─── Upload / Guest Token ────────────────────────────
# Must be ≥ 32 characters, different from JWT_SECRET
UPLOAD_GUEST_TOKEN_SECRET=CHANGE_ME_another_random_secret_here
UPLOAD_GUEST_TOKEN_TTL_SECONDS=900
UPLOAD_GUEST_TOKEN_RATE_LIMIT_PER_MINUTE=10
UPLOAD_REQUEST_LIMIT_PER_MINUTE=15
UPLOAD_FILES_LIMIT_PER_MINUTE=40
UPLOAD_BYTES_LIMIT_PER_MINUTE=83886080

# ─── S3 / Object Storage ─────────────────────────────
# For AWS S3:    https://s3.amazonaws.com
# For MinIO:     https://minio.your-domain.com
# For Cloudflare R2: https://<account-id>.r2.cloudflarestorage.com
S3_ENDPOINT=https://s3.amazonaws.com
S3_REGION=eu-central-1
S3_BUCKET=marketplace-prod
S3_ACCESS_KEY_ID=CHANGE_ME
S3_SECRET_ACCESS_KEY=CHANGE_ME_min_24_characters_long
S3_PUBLIC_URL=https://cdn.your-domain.com/marketplace-prod
S3_PUBLIC_READ_ASSETS=false

# ─── Email (SMTP) ────────────────────────────────────
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
MAIL_FROM=noreply@your-domain.com
MAIL_FROM_NAME=АЛЬКОР
